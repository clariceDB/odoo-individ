<?xml version="1.0"?>
<odoo>
    <record id="view_form_artist" model="ir.ui.view">
        <field name="name">Artist</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="albums"/>
                <field name="songs"/>
            </form>
        </field>
    </record>

    <record id="view_tree_artist" model="ir.ui.view">
        <field name="name">Artists</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="albums"/>
                <field name="songs"/>
            </tree>
        </field>
    </record>
</odoo>