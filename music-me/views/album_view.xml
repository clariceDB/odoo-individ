<?xml version="1.0"?>
<odoo>
    <record id="view_form_album" model="ir.ui.view">
        <field name="name">Album</field>
        <field name="model">music.album</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="artist"/>
                    <field name="songs"/>
                    <field name="genre"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_tree_album" model="ir.ui.view">
        <field name="name">Albums</field>
        <field name="model">music.album</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="artist"/>
                <field name="songs"/>
                <field name="genre"/>
            </tree>
        </field>
    </record>
</odoo>