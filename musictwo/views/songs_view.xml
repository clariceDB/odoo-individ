<?xml version="1.0"?>
<odoo>
    <record id="view_form_song" model="ir.ui.view">
        <field name="name">Song</field>
        <field name="model">musictwo.song</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <!--<field name="album"/>-->
                </group>
            </form>
        </field>
    </record>

    <record id="view_tree_song" model="ir.ui.view">
        <field name="name">Songs</field>
        <field name="model">musictwo.song</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="album"/>
                <button name="_liked_pressed" string="Confirm" class="oe_highlight"/>
            </tree>
        </field>
    </record>
</odoo>